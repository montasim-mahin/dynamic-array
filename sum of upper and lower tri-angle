// created my mahin
// without main diagonalal elements will be 0.
#include<stdio.h>
int main()
{
    int a[100][100];
    int i,j,sum=0,row,col;
    printf("enter size of array:\n");
    {
        scanf("%d %d",&row,&col);
  
    }
    for(int i=0;i<row;i++)
    {
        {
            for (int j=0;j<col;j++)
            {   
                if(i==j)
                {
                   a[i][j]=1;
                }
                else
                {
                    a[i][j]=0;
                }
             
               
            }
              
             printf("\n");
        }
    }

    
     for(int i=0;i<row;i++)
    {
        {
            for (int j=0;j<col;j++)
            {   
                printf("%d ",a[i][j]);
               
            }
             printf("\n");
        }

    }
    
   
    return 0;
    }
